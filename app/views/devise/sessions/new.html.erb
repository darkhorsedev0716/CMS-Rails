<div class="row">
  <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="panel-title"><%= t('.txtlogin') %></div>
        <div style="float:right; font-size: 80%; position: relative; top:-10px"><%= link_to t('.txtforgot'), new_user_password_path %></div>
      </div>
      <div style="padding-top:30px" class="panel-body">
        <h2><%= t('devise.sessions.title.new') %></h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.label :email, t('devise.sessions.form.email'), class: "form_label" %><br/>
              <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :password, t('devise.sessions.form.password'), class: "form_label" %><br/>
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, t('devise.sessions.form.remember_me'), class: "form_label" %>
                </div>
            <% end -%>

            <div class="actions">
              <%= f.submit t('devise.sessions.form.new.submit'), class: "btn btn-primary" %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>

        <br/><br/>

        <p><%= t('.txtnew') %> <%= link_to t('.register'), new_user_registration_path %></p>
      </div>

    </div>
  </div>
</div>
