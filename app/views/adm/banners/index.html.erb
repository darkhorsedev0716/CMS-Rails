<h1>Listing adm_banners</h1>

<table class="table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Imagem</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adm_banners.each do |adm_banner| %>
      <tr>
        <td><%= adm_banner.titulo %></td>
        <td><%= adm_banner.imagem %></td>
        <td><%= adm_banner.link %></td>
        <td><%= link_to 'Show', adm_banner, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_adm_banner_path(adm_banner), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', adm_banner, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Banner', new_adm_banner_path, class: "btn btn-success" %>
