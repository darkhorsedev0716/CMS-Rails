<p id="notice"><%= notice %></p>
<p>
  <strong>Titulo:</strong>
  <%= @adm_galeria.titulo %>
</p>

<p>
  <strong>Descricao:</strong>
  <%= @adm_galeria.descricao %>
</p>

<p>
 <strong>Imagem capa:</strong>
 <% if @adm_galeria.imagem_capa.blank? %>
 <%= image_tag('noimage.png',size: "256x256", alt: "Sem imagem capa", title: "Sem imagem capa" )%>
 <% else %>
 <%= link_to image_tag(@adm_galeria.imagem_capa,size: "256x256", alt: "Imagem capa" ), '', :title => 'Imagem capa', :target => "_blank" %>
 <% end %>
 
</p>

<%= link_to 'Adicionar imagens', {controller: "galerias_imagens", action: 'new', id: @adm_galeria.id}, class: "btn btn-success" %> |
<%= link_to 'Edit', edit_adm_galeria_path(@adm_galeria), class: "btn btn-primary" %> |
<%= link_to 'Back', adm_galerias_path, class: "btn btn-default" %>
<br /><br />
<div class="row">
  <% @adm_galerias_imagem.each do |agi| %>
  <div class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
   <% if agi.imagem.blank? %>
   <a href="#" class="thumbnail">     
     <%= image_tag('noimage.png',size: "256x256", alt: "Sem imagem", title: "Sem imagem", class: "img-responsive" )%>
   </a>
   <% else %>
   <%= link_to image_tag(agi.imagem,size: "256x256", alt: "Imagem #{agi.id}", class: "img-responsive" ), '', :title => "Imagem #{agi.id}", :target => "_blank", class: "thumbnail"  %>
   <% end %>
   <%= link_to 'Tornar capa', {controller: "galerias", action: 'imagem_capa',id: @adm_galeria.id, :imagem_capa => agi.imagem}, class: "btn btn-primary" %>
 </div>
 <% end %>
</div>
<br />
<%= link_to 'Adicionar imagens', {controller: "galerias_imagens", action: 'new', id: @adm_galeria.id}, class: "btn btn-success" %> |
<%= link_to 'Edit', edit_adm_galeria_path(@adm_galeria), class: "btn btn-primary" %> |
<%= link_to 'Back', adm_galerias_path, class: "btn btn-default" %>
