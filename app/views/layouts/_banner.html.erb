 <ul class="rslides">
  <% @banners.each do |banner| %>
  <% if banner.link.blank? %>
  <li><%= image_tag(  banner.imagem,size: "900x300", alt: "Imagem capa" )%></li>
  <% else %>
  <li><%= link_to  image_tag(   banner.imagem,size: "900x300", alt: "Imagem capa" ), banner.link, :title => banner.titulo, :target => "_blank" %></li>
  <% end %>

  <% end %>
</ul>
